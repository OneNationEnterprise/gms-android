<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/subscriptionContainer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blue003"
    android:fitsSystemWindows="true">

    <ImageView
        android:id="@+id/backArrowIv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:src="@drawable/ic_back_arrow"
        android:tint="@color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/gymNameTv"
        style="@style/FontLocalizedBold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Gym Name"
        android:textColor="@color/white"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@id/backArrowIv"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/backArrowIv"
        app:layout_constraintWidth_percent="1" />

    <TextView
        android:id="@+id/titleTv"
        style="@style/FontLocalizedBold"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="37dp"
        android:textColor="@color/white"
        android:textSize="18sp"
        app:layout_constraintTop_toBottomOf="@id/gymNameTv"
        tools:text="Title" />

    <TextView
        android:id="@+id/descriptionTv"
        style="@style/FontLocalizedMedium"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:paddingEnd="8dp"
        android:textColor="@color/blue001"
        android:textSize="15sp"
        app:layout_constraintTop_toBottomOf="@id/titleTv"
        tools:text="Title as dasnd as das hdsahd jash dkjash djkash dkjash dkjas" />


    <TextView
        android:id="@+id/recycleViewTitleTv"
        style="@style/FontLocalizedMedium"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="24dp"
        android:paddingEnd="8dp"
        android:textColor="@color/white"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@id/descriptionTv"
        tools:text="Select pass" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/subscriptionsRv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/recycleViewTitleTv" />


    <Button
        android:id="@+id/buySubscriptionBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="10dp"
        android:backgroundTint="#505768"
        android:padding="14dp"
        android:text="@string/next"
        android:textAllCaps="false"
        android:textColor="@color/gray0015"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>