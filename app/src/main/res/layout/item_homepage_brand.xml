<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/productImageContainer"
        android:layout_width="242dp"
        android:layout_height="290dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="9dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/gymImageIv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY" />

    </androidx.cardview.widget.CardView>

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/brandLogoIv"
        android:layout_width="95dp"
        android:layout_height="95dp"
        android:layout_marginBottom="46dp"
        android:background="@drawable/round_shape"
        android:elevation="9dp"
        app:layout_constraintBottom_toBottomOf="@id/productImageContainer"
        app:layout_constraintEnd_toEndOf="@id/productImageContainer"
        app:layout_constraintStart_toStartOf="@id/productImageContainer" />



    <TextView
        android:id="@+id/numberOfGymsTv"
        style="@style/FontLocalizedMedium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:elevation="9dp"
        android:textColor="@color/white"
        android:padding="3dp"
        android:background="@drawable/bg_darkgray_round_corners"
        app:layout_constraintBottom_toBottomOf="@id/productImageContainer"
        app:layout_constraintEnd_toEndOf="@id/productImageContainer"
        app:layout_constraintStart_toStartOf="@id/productImageContainer"
        app:layout_constraintTop_toBottomOf="@id/brandLogoIv" />

    <LinearLayout
        android:id="@+id/passesContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:elevation="9dp"
        android:orientation="vertical"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/productImageContainer"
        tools:visibility="visible">

        <ImageView
            android:id="@+id/passesIv"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginTop="24dp"
            android:background="@drawable/round_shape"
            android:padding="14dp"
            android:src="@drawable/ic_passes" />

        <TextView
            style="@style/FontLocalizedBold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="4dp"
            android:text="@string/passes"
            android:textColor="@color/red001"
            android:textSize="15sp" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>