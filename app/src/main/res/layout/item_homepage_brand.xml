<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/productImageContainer"
        android:layout_width="242dp"
        android:layout_height="290dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="9dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/productImage"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/red001"
            android:scaleType="fitCenter" />

    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:id="@+id/passesContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/productImageContainer"
        tools:visibility="visible">

        <ImageView
            android:id="@+id/passesIv"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginTop="38dp"
            android:background="@drawable/round_shape"
            android:padding="14dp"
            android:src="@drawable/ic_passes" />

        <TextView
            style="@style/FontLocalizedBold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="4dp"
            android:text="@string/passes"
            android:textColor="@color/red001"
            android:textSize="15sp" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>