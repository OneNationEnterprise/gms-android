<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/myFatoorahPaymentContainer"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    app:layout_constraintStart_toStartOf="parent">

    <ImageView
        android:id="@+id/myFatoorahPaymentIcon"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <ImageView
        android:id="@+id/myFatoorahPaymentCheckbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_radiobutton_iconoff"
        app:layout_constraintBottom_toBottomOf="@id/myFatoorahPaymentIcon"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/myFatoorahPaymentIcon" />


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="@id/myFatoorahPaymentIcon"
        app:layout_constraintStart_toEndOf="@id/myFatoorahPaymentIcon"
        app:layout_constraintTop_toTopOf="@id/myFatoorahPaymentIcon">

        <TextView
            android:id="@+id/cardTypeTv"
            style="@style/FontLocalizedBold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            app:layout_constraintStart_toEndOf="@id/myFatoorahPaymentIcon"
            app:layout_constraintTop_toTopOf="@id/myFatoorahPaymentIcon"
            tools:text="Payment Name" />

        <TextView
            android:id="@+id/cardDetailsTv"
            style="@style/FontLocalizedMedium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            app:layout_constraintStart_toEndOf="@id/myFatoorahPaymentIcon"
            app:layout_constraintTop_toBottomOf="@id/myFatoorahPaymentIcon"
            tools:text="**** 1233 | Expiry Date 04/21" />

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>