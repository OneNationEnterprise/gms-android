<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/itemContainer"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ffffff"
    android:paddingTop="8dp"
    android:paddingBottom="8dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/productImageContainer"
        android:layout_width="52dp"
        android:layout_height="52dp"
        android:layout_marginStart="16dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="2dp"
        app:layout_constraintStart_toStartOf="parent">

        <ImageView
            android:id="@+id/productImage"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="1dp"
            android:scaleType="fitXY" />
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/productName"
        style="@style/FontLocalizedMedium"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:textColor="@color/white"
        app:layout_constraintStart_toEndOf="@id/productImageContainer"
        app:layout_constraintTop_toTopOf="@id/productImageContainer"
        app:layout_constraintWidth_percent=".5"
        tools:text="Someproduct nae" />

    <TextView
        android:id="@+id/productDetails"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:ellipsize="end"
        android:maxLines="2"
        android:textColor="@color/gray003"
        android:textSize="11sp"
        app:layout_constraintStart_toEndOf="@id/productImageContainer"
        app:layout_constraintTop_toBottomOf="@id/productName"
        app:layout_constraintWidth_percent=".5"
        tools:text="misanfoanskfbakjsbfkjas dj ijas diajs dias dias dijsa dijas dias disa dfdsfsdfsdfs dfsdf" />

    <TextView
        android:id="@+id/price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:textColor="@color/white"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="@+id/productAdd"
        app:layout_constraintTop_toBottomOf="@id/productName"
        app:layout_constraintTop_toTopOf="@id/productName"
        app:layout_constraintWidth_percent=".5"
        tools:text="15000 KWD" />


    <ImageView
        android:id="@+id/productAdd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingStart="5dp"
        android:layout_marginEnd="8dp"
        android:src="@drawable/ic_plussmall"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/quantity"
        style="@style/FontLocalizedMedium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:textColor="@color/white"
        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="@id/productAdd"
        app:layout_constraintEnd_toStartOf="@id/productAdd"
        app:layout_constraintTop_toTopOf="@id/productAdd"
        tools:text="3" />

    <ImageView
        android:id="@+id/productMinus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingEnd="5dp"
        android:src="@drawable/ic_removeitemsmall"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/quantity" />

</androidx.constraintlayout.widget.ConstraintLayout>