<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/authInputOtpLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:alpha="0"
    android:orientation="vertical"
    android:paddingBottom="16dp"
    android:visibility="gone"
    tools:alpha="1"
    tools:visibility="visible">

    <LinearLayout
        android:id="@+id/otpViewContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/otpPhoneNumberTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            tools:text="+982 92039302" />

        <TextView
            android:id="@+id/editPhoneTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="4dp"
            android:text="new account creation edit phone"
            android:textColor="@color/blue001"
            android:textSize="15sp"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/otpEditPhoneTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="new account creation edit phone"
            android:textColor="@color/blue001"
            android:textSize="13sp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/otpEnterSmsTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="@string/auth_enter_otp_title"
            android:textColor="@color/blue001"
            android:textSize="16sp" />

        <in.aabhasjindal.otptextview.OtpTextView
            android:id="@+id/otpView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#ffffff"
            app:bar_active_color="@android:color/white"
            app:bar_enabled="true"
            app:bar_height="2dp"
            app:bar_inactive_color="@android:color/white"
            app:height="40dp"
            app:length="6"
            app:otp_text_size="24dp"
            app:width="40dp" />
    </LinearLayout>

    <TextView
        android:id="@+id/invalidOTPCode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="16dp"
        android:text="@string/new_account_creation_invalid_otp"
        android:textColor="@color/red001"
        android:textSize="14sp"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/otpViewContainer"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/otpNotSupported"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="new_account_creation_otp"
        android:textSize="14sp"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/invalidOTPCode" />

    <TextView
        android:id="@+id/otpCounter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/otpResendTv"
        tools:text="00:59" />

    <TextView
        android:id="@+id/otpResendTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="12dp"
        android:text="â†’ Resent OTP"
        android:textColor="@color/blue001"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/otpNotSupported" />


    <LinearLayout
        android:id="@+id/skipContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@+id/otpCounter"
        tools:visibility="visible">


        <TextView
            android:id="@+id/skipOtpTitleTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:text="user_profile_skip_otp_title"
            android:textSize="15sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/skipOtpBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="3dp"
            android:text="user_profile_skip_otp_btn"
            android:textColor="@color/blue001"
            android:textSize="15sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/skipOtpTitleTv" />


    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>