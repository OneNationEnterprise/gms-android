<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/signUpPhoneDescriptionTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="8dp"
        android:gravity="center"
        android:paddingStart="32dp"
        android:paddingEnd="32dp"
        android:text="Enter your mobile number, we will send you an SMS to validate the phone number"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/phoneNumberHolder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="32dp"
        app:layout_constraintTop_toBottomOf="@+id/signUpPhoneDescriptionTv">

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/inputPhoneNumberSignIn"
            style="@style/EditText.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            app:boxStrokeColor="@color/red001"
            app:hintAnimationEnabled="false"
            app:hintEnabled="false"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/editTextPhoneSignIn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:hint="@string/edit_user_profile_phone"
                android:inputType="phone"
                android:textAlignment="viewStart"
                android:textSize="14sp" />
        </com.google.android.material.textfield.TextInputLayout>

        <LinearLayout
            android:id="@+id/prefixContainerPhone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/phone_input_edit_text_padding_left"
            android:clickable="true"
            android:layoutDirection="ltr"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="@+id/inputPhoneNumberSignIn"
            app:layout_constraintLeft_toLeftOf="@id/inputPhoneNumberSignIn"
            app:layout_constraintTop_toTopOf="@+id/inputPhoneNumberSignIn">

            <ImageView
                android:id="@+id/flagPhoneIv"
                android:layout_width="30dp"
                android:layout_height="30dp" />

            <TextView
                android:id="@+id/phonePrefixPhoneTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:paddingStart="3dp"
                android:textColor="@color/black"
                android:textSize="14sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@id/flagIv"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="+123" />
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/errorInputPhoneTv"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:text="@string/error_phone_wrong_validation"
        android:textColor="@color/red"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="@id/phoneNumberHolder"
        android:layout_marginStart="@dimen/phone_input_edit_text_padding_left"
        app:layout_constraintStart_toStartOf="@+id/phoneNumberHolder"
        app:layout_constraintTop_toBottomOf="@+id/phoneNumberHolder"
        tools:visibility="visible" />


    <TextView
        android:id="@+id/continueTv"
        style="@style/ButtonTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:background="@drawable/save_button_inactive"
        android:text="Continue"
        app:layout_constraintTop_toBottomOf="@+id/errorInputPhoneTv" />

    <LinearLayout
        android:id="@+id/switchView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingTop="16dp"
        android:paddingBottom="16dp"
        app:layout_constraintTop_toBottomOf="@+id/continueTv">

        <TextView
            android:id="@+id/textSubPromoTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:textColor="@color/colorBrown"
            android:textSize="16sp" />


    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>