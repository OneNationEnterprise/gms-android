<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include layout="@layout/item_toolbar"/>

    <EditText
        android:id="@+id/brandsSearchEt"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:layout_margin="12dp"
        android:background="@drawable/bg_token_search"
        android:drawableLeft="@drawable/ic_search"
        android:drawablePadding="6dp"
        android:drawableTint="@color/gray001"
        android:hint=""
        android:inputType="textPostalAddress"
        android:padding="4dp"
        android:textAlignment="viewStart"
        android:textColor="@color/gray003"
        app:layout_constraintEnd_toStartOf="@+id/cancelTxt"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/toolbarContainer" />

    <ImageView
        android:id="@+id/clearTextIv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:padding="3dp"
        android:src="@drawable/ic_round_close"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@id/brandsSearchEt"
        app:layout_constraintEnd_toEndOf="@id/brandsSearchEt"
        app:layout_constraintTop_toTopOf="@id/brandsSearchEt"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/cancelTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingStart="4dp"
        android:text="@string/cancel"
        android:textColor="@color/red001"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@id/brandsSearchEt"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/brandsSearchEt" />


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/brandsRv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/brandsSearchEt" />

</androidx.constraintlayout.widget.ConstraintLayout>