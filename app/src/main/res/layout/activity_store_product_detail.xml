<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/viewPagerContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:context="com.tbuonomo.dotsindicatorsample.viewpager.ViewPagerActivity">

            <androidx.viewpager2.widget.ViewPager2
                android:id="@+id/viewPager2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                app:layout_constraintDimensionRatio="1:1"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <com.tbuonomo.viewpagerdotsindicator.DotsIndicator
                android:id="@+id/dotsIndicator"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="8dp"
                app:dotsColor="@color/md_white_1000"
                app:dotsCornerRadius="8dp"
                app:dotsSize="5dp"
                app:dotsSpacing="2dp"
                app:dotsWidthFactor="2.5"
                app:layout_constraintBottom_toBottomOf="@+id/viewPager2"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:progressMode="false"
                app:selectedDotColor="@color/accent" />


            <ImageView
                android:id="@+id/closeIv"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:padding="18dp"
                android:src="@drawable/ic_close"
                android:tint="@color/black"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <TextView
            android:id="@+id/brandNameTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:paddingTop="16dp"
            android:paddingBottom="4dp"
            android:textAllCaps="true"
            android:textColor="@color/accent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/viewPagerContainer"
            tools:text="COSTA" />


        <TextView
            android:id="@+id/productName"
            style="@style/FontLocalizedMedium"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="16dp"
            android:ellipsize="end"
            android:maxLines="4"
            android:textSize="18sp"
            app:layout_constraintTop_toBottomOf="@+id/brandNameTv"
            tools:text="Espresso machine etc next forasa" />

        <LinearLayout
            android:id="@+id/otherInfoContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:visibility="gone"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/productName">

            <TextView
                android:id="@+id/productDiscountValue"
                style="@style/FontLocalizedBold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="4dp"
                android:background="@color/green002"
                android:padding="2dp"
                android:textColor="@color/green001"
                android:textSize="12sp"
                tools:text="20% OFF" />
        </LinearLayout>

        <TextView
            android:id="@+id/productPrice"
            style="@style/FontLocalizedBold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="4dp"
            android:textColor="@color/brown004"
            android:textSize="13sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/otherInfoContainer"
            tools:text="1.250KD" />

        <TextView
            android:id="@+id/oldProductPrice"
            style="@style/FontLocalizedMedium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="4dp"
            android:textColor="@color/brown004"
            android:textSize="12sp"
            app:layout_constraintStart_toEndOf="@+id/productPrice"
            app:layout_constraintTop_toBottomOf="@id/otherInfoContainer"
            tools:text="1.250KD" />

        <LinearLayout
            android:id="@+id/infoContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="16dp"
            android:orientation="vertical"
            android:weightSum="1"
            app:layout_constraintTop_toBottomOf="@+id/productPrice">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/availabilityContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="4dp"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/availabilityIv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_stock_available"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/availabilityTitle"
                    style="@style/FontLocalizedBold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:text="@string/store_availability"
                    android:textColor="@color/gray001"
                    android:textSize="14sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toEndOf="@id/availabilityIv"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/availabilityDescription"
                    style="@style/FontLocalizedBold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/green001"
                    android:textSize="10sp"
                    app:layout_constraintStart_toStartOf="@id/availabilityTitle"
                    app:layout_constraintTop_toBottomOf="@+id/availabilityTitle"
                    tools:text="in stock" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <View
                android:id="@+id/warrantyDivider"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:visibility="gone"
                android:background="@color/gray002"
                app:layout_constraintStart_toStartOf="parent"/>


            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/warrantyContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="4dp"
                android:layout_weight=".33"
                android:gravity="start"
                android:orientation="vertical"
                android:visibility="gone"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/productPrice"
                tools:visibility="visible">

                <ImageView
                    android:id="@+id/warrantyIv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_warranty"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/warrantyTitle"
                    style="@style/FontLocalizedBold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:text="@string/store_warranty"
                    android:textColor="@color/gray001"
                    android:textSize="14sp"
                    app:layout_constraintStart_toEndOf="@id/warrantyIv"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/warranyDescription"
                    style="@style/FontLocalizedBold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="11sp"
                    android:textColor="@color/blue003"
                    app:layout_constraintStart_toStartOf="@id/warrantyTitle"
                    app:layout_constraintTop_toBottomOf="@+id/warrantyTitle"
                    tools:text="2 years" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <View
                android:id="@+id/returnDivider"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/gray002"
                app:layout_constraintStart_toStartOf="parent"/>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/returnContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="4dp"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/returnIv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_returns"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/returnTitle"
                    style="@style/FontLocalizedBold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:text="@string/store_returns"
                    android:textColor="@color/gray001"
                    android:textSize="14sp"
                    app:layout_constraintStart_toEndOf="@id/returnIv"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/returnDescription"
                    style="@style/FontLocalizedBold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="11sp"
                    android:textColor="@color/blue003"
                    app:layout_constraintStart_toStartOf="@id/returnTitle"
                    app:layout_constraintTop_toBottomOf="@+id/returnTitle"
                    tools:text="2 years" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </LinearLayout>

        <TextView
            android:id="@+id/outOfStockTv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:text="@string/store_out_of_stock"
            android:textColor="@color/red"
            android:visibility="gone"
            app:layout_constraintTop_toBottomOf="@+id/infoContainer" />

        <View
            android:id="@+id/descriptionTopLine"
            android:layout_width="match_parent"
            android:layout_height="8dp"
            android:layout_marginTop="8dp"
            android:background="@color/brown002"
            app:layout_constraintTop_toBottomOf="@+id/outOfStockTv" />

        <TextView
            android:id="@+id/descriptionTitle"
            style="@style/FontLocalizedBold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="16dp"
            android:text="@string/store_description"
            android:textAllCaps="true"
            android:textColor="@color/gray001"
            android:textSize="14sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/descriptionTopLine" />

        <TextView
            android:id="@+id/descriptionDetails"
            style="@style/FontLocalizedMedium"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            app:layout_constraintTop_toBottomOf="@+id/descriptionTitle"
            tools:text="loremIpsum blabalabalaba ab baba baa b baab" />

        <View
            android:id="@+id/descriptioBottomLine"
            android:layout_width="match_parent"
            android:layout_height="8dp"
            android:background="@color/brown004"
            android:visibility="gone"
            app:layout_constraintTop_toBottomOf="@+id/descriptionDetails" />

        <TextView
            android:id="@+id/customerAlsoViewed"
            style="@style/FontLocalizedBold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:textAllCaps="true"
            android:textColor="@color/brown004"
            android:textSize="16sp"
            android:visibility="gone"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/descriptioBottomLine"
            tools:text="@string/store_customer_also_viewed" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/relatedProductsRv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            app:layout_constraintTop_toBottomOf="@+id/customerAlsoViewed" />



        <Button
            android:id="@+id/addProduct"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="14dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="16dp"
            app:layout_constraintStart_toStartOf="parent"
            android:foreground="?android:attr/selectableItemBackground"
            app:layout_constraintTop_toBottomOf="@+id/relatedProductsRv"
            android:text="Save"
            android:textAllCaps="false" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>