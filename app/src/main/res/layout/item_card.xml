<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="16dp"
    android:background="@drawable/bg_round_red_margin_blue_bg"
    android:orientation="vertical">


    <ImageView
        android:id="@+id/cardIconIv"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <ImageView
        android:id="@+id/deleteIconIv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:src="@drawable/ic_delete"
        android:tint="@color/accent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/cardNumber"
        style="@style/FontLocalizedMedium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:gravity="center"
        android:textSize="13sp"
        android:textColor="@color/white"
        app:layout_constraintStart_toEndOf="@id/cardIconIv"
        app:layout_constraintTop_toBottomOf="@id/cardBrand"
        tools:text="512345xxxxxx0008" />


    <TextView
        android:id="@+id/cardBrand"
        style="@style/FontLocalizedBold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:paddingTop="6dp"
        android:textSize="18sp"
        android:textColor="@color/white"
        app:layout_constraintStart_toEndOf="@id/cardIconIv"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Mastercard" />


    <TextView
        android:id="@+id/expiryDateTitleTv"
        style="@style/FontLocalizedMedium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="24dp"
        android:paddingBottom="6dp"
        android:text="@string/expiry_date"
        android:textSize="11sp"
        app:layout_constraintStart_toEndOf="@id/cardIconIv"
        app:layout_constraintTop_toBottomOf="@+id/cardNumber" />


    <TextView
        android:id="@+id/expiryDateValueTv"
        style="@style/FontLocalizedMedium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:gravity="top"
        android:paddingBottom="6dp"
        android:textSize="11sp"
        app:layout_constraintStart_toEndOf="@id/expiryDateTitleTv"
        app:layout_constraintTop_toTopOf="@+id/expiryDateTitleTv"
        tools:text="10/22" />


</androidx.constraintlayout.widget.ConstraintLayout>