<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blue005"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include layout="@layout/item_toolbar" />

        <TextView
            android:id="@+id/infoDescriptionTv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:text="@string/medical_form_info_text"
            android:textColor="@color/white"
            app:layout_constraintTop_toBottomOf="@+id/toolbarContainer" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/medicalFormRv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            app:layout_constraintTop_toBottomOf="@id/infoDescriptionTv" />

    </LinearLayout>

    <include
        android:id="@+id/loading"
        layout="@layout/loader_fullscreen"
        android:visibility="gone" />

</androidx.constraintlayout.widget.ConstraintLayout>