<resources>
    <!-- Base application theme. -->
    <style name="Theme.GymApp" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/red001</item>
        <item name="colorPrimaryDark">@color/red001</item>
        <item name="colorAccent">@color/red001</item>
    </style>

    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@anim/slide_up_dialog</item>
        <item name="android:windowExitAnimation">@anim/slide_out_dialog</item>
    </style>

    <style name="EditText.OutlinedBox" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:height">@dimen/edit_text_height</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textCursorDrawable">@null</item>
        <item name="android:textColorHint">@color/blue001</item>
        <item name="hintTextColor">@color/red001</item>
        <item name="hintEnabled">true</item>
    </style>

</resources>