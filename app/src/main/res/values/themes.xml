<resources>
    <!-- Base application theme. -->
    <style name="Theme.GymApp" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/red001</item>
        <item name="colorPrimaryDark">@color/red001</item>
        <item name="colorAccent">@color/red001</item>
        <item name="bottomSheetDialogTheme">@style/AppBottomSheetDialogTheme</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowTranslucentStatus">true</item>
    </style>

    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@anim/slide_up_dialog</item>
        <item name="android:windowExitAnimation">@anim/slide_out_dialog</item>
    </style>

    <style name="EditText.OutlinedBox" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:height">@dimen/edit_text_height</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textCursorDrawable">@null</item>
        <item name="android:textColorHint">@color/blue001</item>
        <item name="hintTextColor">@color/red001</item>
        <item name="hintEnabled">true</item>
    </style>


    <style name="MedicalForm.EditText.OutlinedBox" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:height">@dimen/edit_text_height</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textCursorDrawable">@null</item>
        <item name="android:textColorHint">@color/blue001</item>
        <item name="boxStrokeColor">@color/medical_form_input_et</item>
        <item name="hintTextColor">@color/red001</item>
        <item name="hintEnabled">true</item>
    </style>


    <style name="AppBottomSheetDialogTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/AppModalStyle</item>
    </style>

    <style name="AppModalStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/bg_top_round_corner</item>
    </style>

    <style name="Button" parent="Widget.MaterialComponents.Button">
        <item name="cornerRadius">10dp</item>
        <item name="backgroundTint">@color/red001</item>
        <item name="android:minHeight">56dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/nunito_bold</item>
        <item name="android:elevation">0dp</item>
        <item name="android:stateListAnimator">@null</item>
    </style>

    <style name="Button.Primary">
        <item name="backgroundTint">@color/red001</item>
    </style>

    <style name="Button.Primary.Bold">
        <item name="backgroundTint">@color/red001</item>
        <item name="android:fontFamily">@font/nunito_bold</item>
    </style>

    <style name="Tab.TextAppearance" parent="TextAppearance.AppCompat">
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/nunito_bold</item>
    </style>

</resources>